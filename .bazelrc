# Build optimizations
build --enable_platform_specific_config
build --incompatible_require_python_info_provider=false
build --incompatible_strict_action_env
build --incompatible_use_python_toolchains=false

# Rust settings
build --@rules_rust//rust:rustc_flags=--cfg=feature=\"default\"
build --@rules_rust//rust:rustc_flags=--cfg=feature=\"std\"

# TypeScript settings
build --@aspect_rules_ts//ts:suppress_tsconfig_override_warnings=true

# Lean settings
build --@lean_rules//lean:lean_version=4.3.0

# Test settings
test --test_output=errors
test --test_timeout=300

# Remote execution (if available)
build --remote_executor=grpc://localhost:8080
build --remote_cache=grpc://localhost:8080

# Output settings
build --show_timestamps
build --verbose_failures 